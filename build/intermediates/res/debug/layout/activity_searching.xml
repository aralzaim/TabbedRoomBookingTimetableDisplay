<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/search_room_text"
        android:textSize="40sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView8"
            android:src="@drawable/ic_event_black_24dp"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/date_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusable="false"
             >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView7"
            android:src="@drawable/ic_alarm_black_24dp"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/start_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusable="false" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView6"
            android:src="@drawable/ic_alarm_black_24dp"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/end_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusable="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/extra_needs"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <CheckBox
            android:id="@+id/moveable_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/moveable_tables" />

        <CheckBox
            android:id="@+id/projector_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/projector" />

        <CheckBox
            android:id="@+id/multiple_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/multiple_computers" />

        <CheckBox
            android:id="@+id/capacity_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/capacity" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" >

        <Button
                android:id="@+id/submit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/search_room_button"
                android:textSize="30sp" />

        <TextView
            android:id="@+id/results_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30sp" />

        <ListView
            android:id="@+id/search_list"
            android:layout_width="wrap_content"
            android:layout_height="294dp"
            android:clickable="false">
        </ListView>

        
    </LinearLayout>

</LinearLayout>
